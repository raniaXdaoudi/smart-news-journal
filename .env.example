# Copiez ce fichier : cp .env.example .env

# Mode de résumé : "local" (Sumy) ou "api" (Hugging Face)
MODE=local

# Sources à scraper
SOURCES=https://www.actuia.com/actualite/

# Nombre d'articles par source + Nombre de phrases par résumé
MAX_ARTICLES=4
SENTENCES_COUNT=5

# Token API Hugging Face (optionnel, seulement si MODE=api)
HF_API_TOKEN=votre_token_ici

# Configuration email (gmail)
SEND_EMAIL=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_FROM=votre.email@gmail.com
EMAIL_PASSWORD=mot_de_passe_application
EMAIL_TO=destinataire@example.com

# Note : Pour Gmail, créez un mot de passe d'application
# https://support.google.com/accounts/answer/185833
